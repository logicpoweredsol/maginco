@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script>
        $(function () {
            $("#header-menu-sub").hide();
        });
    </script>
    @RenderSection("scripts", false)
}

@section body{
    <div class="container-fluid">
    <div class="row">
        <div class="col-md-2 col">
            <div class="myNav">
                <img src="~/Resc/images/theme/image.png" class="img-circle">
            </div>
            <ul class="myList row-eq-height">
                <li>
                    <a href="/User/AdminPanel">
                        <img src="~/Resc/images/theme/bl1.png" class="icon"> Dashboard
                    </a>
                </li>
                <li>
                    <a href="/User/EditUsers">
                        <img src="~/Resc/images/theme/l2.png" class="icon"> Manage Users
                    </a>
                </li>
                <li>
                    <a href="/User/EditCharts">
                        <img src="~/Resc/images/theme/l2.png" class="icon"> Manage Charts
                    </a>
                </li>
                <li>
                    <a href="/auth/Logout">
                        <img src="~/Resc/images/theme/l5.png" class="icon"> Logout
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-md-10 col" style="float:right" id="ko-admin-dashboard">
            @RenderSection("adminDashboardBody", true)
        </div>
    </div>
</div>
}