@model Maginco.Models.DashboardModel

@{
    ViewBag.Title = "Update Email";
    Layout = "~/Views/Shared/_UserDashboard.cshtml";
}

@section scripts{
}

@section dashboardBody{
    @using (Html.BeginForm("UpdateEmail", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group margin-t-xl">
            <div class="col-md-12">
                <div class="col-md-offset-4 col-md-4">
                    <h2 class="text-light text-muted">
                        Update Email
                    </h2>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="col-md-offset-3 col-md-4">
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            @{
                                if (!String.IsNullOrWhiteSpace(ViewBag.UpdateError))
                                {
                                    <div class="alert alert-danger">
                                        <label>
                                            @ViewBag.UpdateError
                                        </label>
                                    </div>
                                }
                                if (!String.IsNullOrWhiteSpace(ViewBag.UpdateSuccess))
                                {
                                    <div class="alert alert-success">
                                        <label>
                                            @ViewBag.UpdateSuccess
                                        </label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Password:</label>
                        </div>
                        <div class="col-md-8">
                            <input type="password" id="txtPassword" name="txtPassword" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>New Email:</label>
                        </div>
                        <div class="col-md-8">
                            <input type="email" id="txtEmail" name="txtEmail" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <input type="submit" class="btn btn-primary" value="Update" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}